<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearShift"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_padding_regular"
    android:clickable="true"
    android:focusable="true"
    android:longClickable="true"
    android:orientation="vertical"
    app:cardBackgroundColor="?attr/colorBackgroundFloating"
    app:cardElevation="0dp"
    app:strokeColor="@android:color/transparent"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/layout_padding_regular">

        <!-- Card header (shift number) -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/textShiftNumber0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shift_number"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:layout_marginBottom="8dp"
            android:gravity="start" />
            <TextView
                android:id="@+id/textShiftNumber1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textStyle="bold"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:layout_marginBottom="8dp"
                android:gravity="start"
                tools:ignore="HardcodedText" />
        </LinearLayout>


        <!-- Card content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/textDate0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/date"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <TextView
                    android:id="@+id/textDate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.08.2025"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <!-- Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/textTime0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/time"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <TextView
                    android:id="@+id/textTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:00â€“02:00"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <!-- Earnings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/textEarnings0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/earnings"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <TextView
                    android:id="@+id/textEarnings1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$120"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <!-- Wash -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/textWash0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/wash"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <TextView
                    android:id="@+id/textWash1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$5"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <!-- Fuel -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/textFuel0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/fuel"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <TextView
                    android:id="@+id/textFuel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$30"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <!-- Mileage -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/textMileage0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/mileage"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <TextView
                    android:id="@+id/textMileage1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120 km"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <!-- Average per hour -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/textPerHour0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/per_hour"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <TextView
                    android:id="@+id/textPerHour1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$15/h"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <!-- Profit -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/textProfit0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/profit"
                    android:textAppearance="?attr/textAppearanceBodyMedium" />

                <TextView
                    android:id="@+id/textProfit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$85"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>